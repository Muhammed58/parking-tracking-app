<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Acme Web Design</title>
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.css" />
</head>
<script>
  const url = new URL(window.location.href)
  const password = url.searchParams.get("password");
  console.log(document.getElementById("passwordValue"))
  const reEnterPassword = url.searchParams.get("re-enter-password");
  const handleSubmit = () =>{
    password === reEnterPassword && console.log("password match")

  }
  console.log("it works")
</script>

<style>
  *{
    box-sizing: border-box;
  }
  
  body{
    background:#FFCC56;
    color:#485e74;
    line-height:1.6;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    padding:1em;
  }
  
  .container{
    max-width:1170px;
    margin-left:auto;
    margin-right:auto;
    padding:1em;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  ul{
    list-style: none;
    padding:0;
  }
  
  .brand{
    text-align: center;
  }
  
  .brand span{
    color:#fff;
  }
  
  .wrapper{
    box-shadow: 0 0 20px 0 rgba(72,94,116,0.7);
    text-align: center;
  }
  
  .wrapper > *{
    padding: 1em;
  }
  
  .company-info{
    background:#c9e6ff;
  }
  
  .company-info h3, .company-info ul{
    text-align: center;
    margin:0 0 1rem 0;
  }
  
  .contact{
    background:#f9feff;
    border-radius: 5px;
  }
  
  /* FORM STYLES */
  .contact form{
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap:20px;
  }
  
  .contact form label{
    display:block;
  }
  
  .contact form p{
    margin:0;
  }

  .contact form input {
    border-radius: 5px;
  }
  
  .contact form .full{
    grid-column: 1 / 3;
  }
  
  .contact form button, .contact form input, .contact form textarea{
    width:100%;
    padding:1em;
    border:1px solid #c9e6ff;
  }
  
  .contact form button{
    background:#FFCC56;
    border:0;
    border-radius: 5px;
    text-transform: uppercase;
  }
  
  .contact form button:hover,.contact form button:focus{
    background:rgba(72,94,116,0.7);
    color:#fff;
    outline:0;
    transition: background-color 2s ease-out;
  }
  
  /* LARGE SCREENS */
  @media(min-width:700px){
    .wrapper > *{
      padding:2em;
    }
  
    .company-info h3, .company-info ul, .brand{
      text-align: left;
    }
  }
</style>
<body>
  <div class="container">
    <h1 class="brand"><span>Password</span> Reset</h1>
    <div class="wrapper animated bounceInLeft">
      
      <div class="contact">
        <h3>Enter New Password!</h3>
        {{msg}}
        <form action="" id="formInfo" onsubmit="handleSubmit()">
          <p>
            <label>Password</label>
            <input onchange="console.log(this.value)" type="password" id="passwordValue" name="password">
          </p>
          <p>
            <label>Re-Enter Password</label>
            <input onchange="console.log(this.value)" type="password" id="re-enter-password" name="re-enter-password">
          </p>
          <p class="full">
            <button type="submit">Submit</button>
          </p>
        </form>
      </div>
    </div>
  </div>
</body>
</html>